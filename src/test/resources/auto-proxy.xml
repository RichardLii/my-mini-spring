<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context
		 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="worldService" class="com.example.testbean.WorldServiceImpl"/>

    <bean class="com.example.aop.proxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="pointcutAdvisor" class="com.example.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* com.example.testbean.WorldService.explode(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>


    <bean id="methodInterceptor" class="com.example.aop.advice.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="beforeAdvice" class="com.example.testbean.WorldServiceBeforeAdvice"/>

</beans>